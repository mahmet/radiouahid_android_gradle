<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        android:orientation="vertical" >

        <LinearLayout
                   android:orientation="vertical"
                   android:background="#80000000"
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent">



          <LinearLayout
                   android:id="@+id/linearLayout1"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="10dp"
                   android:background="#3fffffff"
                   android:gravity="center"
                   android:orientation="horizontal" >


          <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:orientation="horizontal" >


               <Button
                        android:onClick="btnFacebook"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/btn_facebook"/>


               </LinearLayout>
               <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                     <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_chat"
                        android:onClick="btnChat"/>



              </LinearLayout>
              <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.1"
                    android:gravity="center"

                    android:orientation="horizontal" >

                 <Button
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/btn_twitter"
                        android:onClick="btnTwitter" />



              </LinearLayout>

             </LinearLayout>




           <LinearLayout
                android:id="@+id/nameholder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#3fffffff"
                android:gravity="center"
                android:orientation="horizontal" >

          <TextView
                 android:textSize="40.0sp"
                 android:textColor="#fffffffF"
                 android:id="@+id/djname"
                 android:paddingLeft="2.0dip"
                 android:paddingRight="2.0dip"
                 android:layout_marginTop="10dip"
                 android:gravity="center"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="2.0dip"
                 android:layout_marginRight="2.0dip"
                 android:layout_marginBottom="5dp"
                 android:text="-"
                 android:singleLine="true"
                 android:freezesText="true"
                 android:layout_centerVertical="true"  />




        </LinearLayout>
            <LinearLayout
                android:id="@+id/nameholder2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#3fffffff"
                android:gravity="center"
                android:orientation="horizontal" >

            <TextView android:textSize="18.0sp"
                 android:gravity="center"
                 android:textColor="#ffffffff"
                 android:id="@+id/view_main_text_status"
                 android:paddingLeft="2.0dip"
                 android:paddingRight="2.0dip"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="2.0dip"
                 android:layout_marginRight="2.0dip"
                 android:layout_marginBottom="10dp"
                 android:text="-"
                 android:layout_centerVertical="true" />

            </LinearLayout>

                 <LinearLayout
                android:id="@+id/logoholder"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="5"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/logo" >
                </ImageView>

                <TextView
                    android:id="@+id/digitalClock1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:23"
                    android:textSize="20dp"
                    android:textColor="@color/gift_green"
                    />

            </LinearLayout>


                 <LinearLayout
                 android:gravity="center"
                 android:orientation="horizontal"
                 android:paddingLeft="40dip"
                 android:paddingRight="40dip"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content" >

                 <LinearLayout
                 android:gravity="center_vertical"
                 android:orientation="horizontal"
                 android:layout_width="0.0dip"
                 android:layout_height="fill_parent"
                 android:layout_weight="3.0">

                <TextView android:textSize="18.0sp"
                        android:gravity="center"
                        android:textColor="#ffffffff"
                        android:ellipsize="marquee"
                        android:id="@+id/view_main_text_meta_title"
                        android:paddingLeft="2.0dip"
                        android:paddingRight="2.0dip"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.0dip"
                        android:layout_marginRight="2.0dip"
                        android:text=""
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:freezesText="true"
                        android:layout_centerVertical="true"
                        android:marqueeRepeatLimit="marquee_forever" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/logoholder2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">


           <LinearLayout
                 android:gravity="center_vertical"
                 android:orientation="horizontal"
                 android:layout_width="0.0dip"
                 android:layout_height="wrap_content"
                 android:layout_weight="3.0">

         <TextView
                    android:textColor="#ffffffff"
                    android:id="@+id/view_main_text_meta_genre"
                    android:gravity="center_horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="..."/>
        </LinearLayout>

        </LinearLayout>

        <LinearLayout
                    android:id="@+id/linearLayout11"
                    android:layout_width="fill_parent"
                    android:layout_height="10dip"
                    android:background="#3fffffff"
                   >

            <ProgressBar
                   android:id="@+id/view_main_progress"
                   android:layout_width="fill_parent"
                   style="@style/CustomProgressBar"
                    android:layout_height="5sp"
                    android:background="#3fffffff"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>

            <LinearLayout
                   android:id="@+id/linearLayout12"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:background="#3fffffff"
                   android:gravity="center"
                   android:orientation="horizontal" >



                <LinearLayout
                    android:id="@+id/linearLayout13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal" >

                 <Button
                    android:id="@+id/view_main_button_play"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/btn_play" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout14"
                    android:paddingBottom="10dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:orientation="horizontal" >
               <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="3.63"
                    android:gravity="center"
                    android:orientation="horizontal" >

               <SeekBar
                    android:id="@id/volumebar"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/vol_bar"
                    android:thumb="@drawable/seek_handler"  />

                </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dip"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal" >

                <Button
                        android:id="@+id/view_main_button_stop"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:enabled="false"
                        android:background="@drawable/btn_stop"
                         />
             </LinearLayout>
            </LinearLayout>

            </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88666666"
        android:id="@+id/top_layout"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/feedback_layout"
            android:paddingBottom="10dp"
            android:id="@+id/feedback_layout"
            android:layout_centerInParent="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_chat"
            android:id="@+id/email_to_radiouahid_button"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/feedback_layout"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/feedback_arrow"
            android:layout_above="@id/email_to_radiouahid_button"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</FrameLayout>